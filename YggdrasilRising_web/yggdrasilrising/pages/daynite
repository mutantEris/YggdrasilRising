// Define a function to determine the current time of day
function getCurrentTimeOfDay() {
    // Get the current hour
    var hour = new Date().getHours();

    // Set the time of day based on the hour
    if (hour >= 6 && hour < 18) {
      return "day";
    } else {
      return "night";
    }
  }

  // Use the function to determine the current time of day
  var currentTimeOfDay = getCurrentTimeOfDay();

  // Update the page to display the current time of day
  document.getElementById("time-of-day").innerHTML = currentTimeOfDay;
